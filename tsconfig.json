{
  "compilerOptions": {
    "target": "ES2022",
    "useDefineForClassFields": true,
    "module": "esnext",
    "lib": ["es2015", "es2018", "dom", "ES2022"],
    "declaration": false,
    "sourceMap": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "moduleResolution": "node",
    "baseUrl": "./",
    "paths": {},
    "esModuleInterop": true,
    "skipLibCheck": true,
    "strict": true
  },
  "angularCompilerOptions": {
    "enableIvy": true
  },
  "exclude": ["node_modules", "dist"]
}
